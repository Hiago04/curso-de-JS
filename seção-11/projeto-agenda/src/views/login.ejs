<%- include('./includes/head.ejs') %>
<%- include('./includes/nav.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Criar conta ou entrar</h1>
            <p class="text-center lead">Faça login ou crie sua conta</p>

            <%- include('./includes/messages.ejs') %>

            <div class="row">

                <div class="col-lg">
                    <h4>Faça o seu cadastro</h4>
                    <p>Faça o seu cadastro</p>

                    <form action="/login/register" method="POST">
                      <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                        <div class="form-group">
                          <label>Seu e-mail</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        
                        <div class="form-group">
                          <label>Sua senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        <div class="my-3">
                          <button type="submit" class="btn btn-primary">Criar minha conta</button>
                        </div>
                      </form>
                </div>

                <div class="col-lg">
                    <h4>Faça o seu login</h4>
                    <p>Se você já tem uma conta faça o seu login</p>
                    <form action="/login/login" method="POST">
                      <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                      <div class="form-group">
                        <label>Seu e-mail</label>
                        <input type="email" class="form-control" name="email">
                      </div>
                      
                      <div class="form-group">
                        <label>Sua senha</label>
                        <input type="password" class="form-control" name="password">
                      </div>
                      <div class="my-3">
                        <button type="submit" class="btn btn-primary">Entrar na minha conta</button>
                      </div>
                      </form>

                </div>

            </div>

        </div>
    </div>
</div>

        <%- include('./includes/footer') %>